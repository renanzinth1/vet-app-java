<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.renanjardel.vetappjava">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ClientesActivity"
            android:label="Lista de Clientes"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.FormClienteActivity"
            android:label="Cadastro de Cliente"
            android:parentActivityName=".activity.ClientesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ClientesActivity" />
        </activity>
        <activity
            android:name=".activity.VeterinariosActivity"
            android:label="Lista de Veterinários"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.FormVeterinarioActivity"
            android:label="Cadastro de Veterinário"
            android:parentActivityName=".activity.VeterinariosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.VeterinariosActivity" />
        </activity>
        <activity
            android:name=".activity.MedicamentosActivity"
            android:label="Lista de Medicamentos"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.FormMedicamentoActivity"
            android:label="Cadastro de Medicamento"
            android:parentActivityName=".activity.MedicamentosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MedicamentosActivity" />
        </activity>
        <activity
            android:name=".activity.EspeciesActivity"
            android:label="Lista de Espécies"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.FormEspecieActivity"
            android:label="Cadastro de Espécie"
            android:parentActivityName=".activity.EspeciesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.EspeciesActivity" />
        </activity>
    </application>

</manifest>